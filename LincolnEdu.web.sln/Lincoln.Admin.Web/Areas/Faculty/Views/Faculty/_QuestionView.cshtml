@model Lincoln.Admin.Web.Models.QuestionSetUpViewModel


<div class="content-body">
    <!-- Base style table -->


    <div class="row">
        <div class="form-group col-lg-6">
            <label><b>Section Marks </b></label>
            <div class="position-relative">
                @Html.DisplayFor(a => a.SectionMarks, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group col-lg-6">
            <label><b>Remaining Marks </b></label>
            <div class="position-relative">
                @Html.DisplayFor(a => a.RemainingMarks, new { @class = "form-control" })

            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="form-group col-lg-6">
            <label><b>Question No </b></label>
            <div class="position-relative">
                @Html.DisplayFor(a => a.QuestionNo, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group col-lg-6">
            <label><b>Maximum Marks </b></label>
            <div class="position-relative ">
                @Html.Raw(Model.QuestionMarks)

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group row">
                <label class="col-lg-3 label-control"><b>Question Type  </b></label>
                <div class="position-relative col-lg-9">
                    <div class="input-group">
                        <div class="d-inline-block custom-control custom-radio mr-1">
                            <input type="radio" name="QuestionType" disabled="disabled" value="S" @(Model.QuestionType == "S" ? "checked" : "")> Subjective
                        </div>
                        <div class="d-inline-block custom-control custom-radio">
                            <input type="radio" name="QuestionType" disabled="disabled" value="O" @(Model.QuestionType == "O" ? "checked" : "")> Objective
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group col-lg-12">
            <label><b>Question Statement <span class="requiredstar">*</span> </b></label>
            <div class="position-relative">
                @Html.Raw(Model.QuestionText)
            </div>
        </div>
        @if (Model.QuestionType == "S")
        {
            <div class="form-group col-lg-12">
                <label><b>Answer Statement<span class="requiredstar">*</span> </b></label>
                <div class="position-relative">
                    @Html.Raw(Model.AnswerText)

                </div>
            </div>

        }
        @if (Model.QuestionType == "O")
        {
            <div id="myContent">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <input type="radio" disabled name="AnswerNo" value="1" /> A
                                </div>
                                <div class="col-lg-10">
                                    @Html.DisplayFor(a => a.OptionAText, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <input type="radio" disabled name="AnswerNo" value="2" /> B
                                </div>
                                <div class="col-lg-10">
                                    @Html.DisplayFor(a => a.OptionBText, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <input type="radio" disabled name="AnswerNo" value="3" /> C
                                </div>
                                <div class="col-lg-10">
                                    @Html.DisplayFor(a => a.OptionCText, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <input type="radio" disabled name="AnswerNo" value="4" /> D
                                </div>
                                <div class="col-lg-10">
                                    @Html.DisplayFor(a => a.OptionDText, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <input type="radio" disabled name="AnswerNo" value="5" /> E
                                </div>
                                <div class="col-lg-10">
                                    @Html.DisplayFor(a => a.OptionEText, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        }

    </div>


    <!--/ Base style table -->
</div>

