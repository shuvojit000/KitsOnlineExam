                                <i class="ft-clock"></i>
                            </div>
                        </div>

                    </div>*@

            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveExaminationName(@Model.ExaminationNameID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>
<script>
    
    $(document).on("focus","#StartDate,#EndDate",function(){
        $('#StartDate').datetimepicker({ format: 'MM/DD/YYYY', minDate: moment() });
        $('#EndDate').datetimepicker({ format: 'MM/DD/YYYY', minDate: moment() });
    });
</script>