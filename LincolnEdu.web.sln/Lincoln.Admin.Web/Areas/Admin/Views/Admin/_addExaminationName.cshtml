

@model Lincoln.Admin.Web.Models.ExaminationNameViewModel

<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <div class="position-relative has-icon-left">
                            <label><b>Examination Name<span class="requiredstar">*</span></b> </label>
                            <div class="position-relative has-icon-left">
                                @Html.TextBoxFor(a => a.ExaminationName, new { @class = "form-control" })
                                <div class="form-control-position">
                                    <i class="fa fa-book"></i>
                                </div>
                                <span id="ExaminationNameVal" style="color:red;display:none" class="valClass"></span>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group col-lg-6">
                        <label>Examination Start Date<span class="requiredstar">*</span> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.StartDate, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <span id="StartDateVal" style="color:red;display:none" class="valClass"></span>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Examination End Date<span class="requiredstar">*</span> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.EndDate, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <span id="EndDateVal" style="color:red;display:none" class="valClass"></span>
                        </div>
                    </div>
                    @*<div class="form-group col-lg-6">
                            <label>Examination Start Time: </label>
                            <div class="position-relative has-icon-left">
                                @Html.TextBoxFor(a => a.StartTime, new { @type = "time", @class = "form-control" })
                                <div class="form-control-position">
                                    <i class="ft-clock"></i>
                                </div>
                            </div>
                        </div>*@
                </div>
                @*<div class="row">
                        <div class="form-group col-lg-6">
                            <label>Examination End Date: </label>
                            <div class="position-relative has-icon-left">
                                @Html.TextBoxFor(a => a.EndDate, new { @type = "date", @class = "form-control" })
                                <div class="form-control-position">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
