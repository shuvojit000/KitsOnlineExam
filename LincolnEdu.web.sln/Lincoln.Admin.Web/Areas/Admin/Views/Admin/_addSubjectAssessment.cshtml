                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Semister<span class="requiredstar">*</span></b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.SemisterCode, Model.SemisterList, "Select Semester", new { @class = "custom-select block" })
                            <span id="SemisterCodeVal" style="color:red;display:none" class="valClass">Please select Semester.</span>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Course<span class="requiredstar">*</span> </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.CourseCode, Model.CourseList, "Select Course", new { @class = "custom-select block" })
                            <span id="CourseIDVal" style="color:red;display:none" class="valClass">Please select Course.</span>
                        </div>
                    </div>

                </div>
                <table class="form-table" id="customFields">
                    <tr>
                        <th scope="row"><label for="customFieldName">Assessment<span class="requiredstar">*</span></label></th>
                        <th scope="row"><label for="customFieldName">Percentage(%)<span class="requiredstar">*</span></label></th>
                        <th scope="row"><label for="customFieldName">Full Marks<span class="requiredstar">*</span></label></th>
                        <th scope="row"><label for="customFieldName">Type<span class="requiredstar">*</span></label></th>
                        <th scope="row"><label for="customFieldName">Open/Close</label></th>
                    </tr>
                    @if (Model.SubjectAssessmentID > 0)
                    {
                        foreach (var item in Model.SubAssessmentDetails)
                        {
                            <tr valign="top">
                                <td>
                                    <input type="text" class="form-control" id="AssessmentName" name="AssessmentName[]" value=@item.AssessmentName placeholder="Name" /> &nbsp;

                                </td>
                                <td>
                                    <input type="text" class="form-control" id="AssessmentPercentage" name="AssessmentPercentage[]" value=@item.AssessmentPercentage placeholder="Percentage" /> &nbsp;

                                </td>
                                <td>
                                    <input type="text" class="form-control" id="FullMarks" name="FullMarks[]" value=@item.FullMarks placeholder="Full Marks" /> &nbsp;
                                </td>
                                <td>
                                    <input type="text" class="form-control" id="AssessmentType" name="AssessmentType[]" value=@item.AssessmentType placeholder="Type" /> &nbsp;
                                </td>
                                <td>
                                    


                                        <input type="checkbox" id="OpenClose" name="OpenClose" value="OpenClose" @(item.OpenClose == 1?"checked":"") />
                                   
                                </td>
                                <td>
                                   
                                    <a href="javascript:void(0);" id="remCF">Remove</a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td>
                                <a href="javascript:void(0);" id="addCF">Add</a>
                            </td>
                        </tr>
                    }
                    else
                    {

                        <tr valign="top">
                            <td>
                                <input type="text" class="form-control AssessmentNameCol" id="AssessmentName" maxlength="25" name="AssessmentName[]" value="" placeholder="Name" /> &nbsp;
                            </td>
                            <td>
                                <input type="text" class="form-control" id="AssessmentPercentage" maxlength="8" step="0.01" name="AssessmentPercentage[]" value="" placeholder="Percentage" /> &nbsp;

                            </td>
                            <td>
                                <input type="text" class="form-control" id="FullMarks" maxlength="8" step="0.01" name="FullMarks[]" value="" placeholder="Full Marks" /> &nbsp;
                            </td>
                            <td>
                                <input type="text" class="form-control" id="AssessmentType" maxlength="25" name="AssessmentType[]" value="" placeholder="Type" /> &nbsp;
                                @*<span style="color:red;display:none" class="valClass AssessmentTypeCol">Enter Assessment Type.</span>*@
                            </td>
                            <td>
                                <input type="checkbox" id="OpenClose" name="OpenClose" value="OpenClose" />@*<input type="radio" class="form-control" id="OpenClose" name="OpenClose[]" value="" checked />*@ &nbsp;
                            </td>
                            <td>
                                <a href="javascript:void(0);" id="addCF">Add</a>
                            </td>
                        </tr>

                    }
                </table>
                <div class="modal-footer">
                    <button type="button" onclick="fnSaveSubjectAssessment(@Model.SubjectAssessmentID)" class="btn btn-primary">
                        <i class="fa fa-check-square-o"></i> Save
                    </button>
                </div>
                <!--PAGE CONTENT ENDS-->
            </div>
        </div>
        <!--main contant end-->
    </div>
</div>
