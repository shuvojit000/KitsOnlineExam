@model Lincoln.Admin.Web.Models.ProgrammeSemesterViewModel
<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Department: </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.DepartmentID, Model.DepartmentList, "Select Department", new { @class = "custom-select block" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Programme :</b> </label>
                        @Html.DropDownListFor(a => a.ProgrammeID, Model.ProgrammeList, "Select Programme", new { @class = "custom-select block" })


                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label><b>Country :</b> </label>
                        <div class="position-relative has-icon-left gt">
                            @Html.DropDownListFor(a => a.CountryID, Model.CountryList, "Select Country", new { @class = "custom-select block" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Programme Year:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.ProgrammeYear, Model.ProgYearList, "Select Programme Year", new { @class = "custom-select block" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Programme Semester:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.ProgrammeSemester, Model.ProgSEMList, "Select SEM", new { @class = "custom-select block" })

                        </div>
                    </div>

                    <div class="form-group col-lg-6">
                        <label><b>Semester Type:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.SemesterType, new List<SelectListItem>

                 {
                    new SelectListItem{ Text="Long", Value = "Long" },
                    new SelectListItem{ Text="Short", Value = "Short" }
                 }, "Select SEM Type", new { @class = "custom-select block" })

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveProgrammeSemester(@Model.ProgrammeSemesterID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>

<script>$(document).ready(function () {
        //Dropdownlist Selectedchange event
        $("#DepartmentID").change(function () {
            $("#ProgrammeID").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetProgDrop","Admin",new { area="Admin"})', // we are calling json method

                dataType: 'json',

                data: { departmentID: $("#DepartmentID").val() },
                success: function (res) {
                    // states contains the JSON formatted list
                    // of states passed from the controller

                    $.each(res, function (i, state) {
                    $("#ProgrammeID").append('<option value="' + state.Value + '">' +
                         state.Text + '</option>');
                    // here we are adding option for States

                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve Faculty.' + ex);
                }
            });
            return false;
        })
    });</script>

