


@model IEnumerable<Lincoln.Admin.Web.Models.AssessmentViewModel>
@{

    int sl = 1;
}

<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>SlNo</th>
            <th>Check</th>

            <th>Faculty</th>
            <th>Program Name</th>
            <th>Program Version</th>
            <th>Assessment Name</th>
            <th>Assessment Type</th>
            <th>STATUS</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.AssessmentID">
                        </center>
                    </td>


                    <td>@item.FacultyName</td>
                    <td>@item.ProgramName</td>
                    <td>@item.SyllabusVersionName</td>
                    <td>@item.AssessmentName</td>
                    <td>@item.AssessmentType</td>
                    <td>@item.Active</td>

                    <td>
                        <a href="javascript:void(0);" onclick="fnViewAssessment(@item.AssessmentID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddAssessment(@item.AssessmentID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteAssessmentg(@item.AssessmentID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }
    </tbody>
</table>
