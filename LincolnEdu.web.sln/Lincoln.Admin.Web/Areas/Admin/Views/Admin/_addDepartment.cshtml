@model Lincoln.Admin.Web.Models.DepartmentViewModel

<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Academic Level<span class="requiredstar">*</span> </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.AcademicID, Model.AcademicList, "Select Academic Level", new { @class = "custom-select block" })
                            
                        </div>
                        <span id="AcademicIdVal" style="color:red;display:none" class="valClass">Please select Academic Level.</span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Faculty Code<span class="requiredstar">*</span></b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.DepartmentCode, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-book"></i>
                            </div>
                            <span id="DepartmentCodeVal" style="color:red;display:none" class="valClass"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label><b>Faculty Name<span class="requiredstar">*</span></b> </label>
                        <div class="position-relative has-icon-left gt">
                            @Html.TextBoxFor(a => a.DepartmentName, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-book"></i>
                            </div>
                            <span id="DepartmentNameVal" style="color:red;display:none" class="valClass"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>HOD Name</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.HODName, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-book"></i>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-lg-6">
                        <label><b>HOD Email<span class="requiredstar">*</span></b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.HODEmail, new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-book"></i>
                            </div>
                            <span id="HODEmailVal" style="color:red;display:none" class="valClass"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveDepartment(@Model.DepartmentID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>
