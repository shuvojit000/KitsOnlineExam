@model IEnumerable<Lincoln.Admin.Web.Models.EmployeeViewModel>
@{

    int sl = 1;
}
<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>Sl NO</th>
            <th>Check</th>
            <th>EmployeeID</th>
            <th>Employee Name</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.EmployeeID">
                        </center>
                    </td>
                    <td>@item.EmployeeCode</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="javascript:void(0);" onclick="fnViewEmployee(@item.EmployeeID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddEmployee(@item.EmployeeID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteEmployee(@item.EmployeeID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }



    </tbody>
</table>
<script>
    $('#dataTables-example').dataTable();
</script>