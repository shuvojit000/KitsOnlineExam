@model Lincoln.Admin.Web.Models.StudentViewModel
<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Student Code:</b> </label>
                        <div class="position-relative has-icon-left">
                            <input type="text" placeholder="Student Code" class="form-control" readonly="readonly">
                            <div class="form-control-position">
                                <i class="ft-user"></i>
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group col-lg-6">
                        <label>Select Batch: </label>
                        <select class="custom-select block" id="ddlCourse">
                            <option selected>Select Batch</option>
                            <option value="1">Active</option>
                            <option value="2">Inactive</option>
                        </select>
                    </div>*@
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label><b>Student Name:</b> </label>
                        <div class="position-relative has-icon-left">
                            <input type="text" placeholder="Student Name" value="@Model.StudentName" class="form-control" readonly>
                            <div class="form-control-position">
                                <i class="ft-user"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Roll No: </b></label>
                        <div class="position-relative has-icon-left">
                            <input type="text" value="@Model.RollNo" readonly placeholder="Roll No" class="form-control">
                            <div class="form-control-position">
                                <i class="icon-size-actual"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Mobile No: </b></label>
                        <div class="position-relative has-icon-left">
                            <input type="text" placeholder="Mobile No" value="@Model.MobileNo" readonly class="form-control">
                            <div class="form-control-position">
                                <i class="fa fa-mobile"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Email Id: </b></label>
                        <div class="position-relative has-icon-left">
                            <input type="text" placeholder="Email Id" value="@Model.EmailID" class="form-control" readonly>
                            <div class="form-control-position">
                                <i class="ft-mail"></i>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
            
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>
