@model IEnumerable<Lincoln.Admin.Web.Models.CourseViewModel>
@{

    int sl = 1;
}
<table class="cell-border stripe" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>SLNO</th>
            <th>CHECK</th>
            <th>COURSE CODE</th>
            <th>COURSE NAME</th>
            <th>STATUS</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.CourseID">
                        </center>
                    </td>

                    <td>@item.CourseCode</td>
                    <td>@item.CourseName</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="javascript:void(0);" onclick="fnViewCourse(@item.CourseID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddCourse(@item.CourseID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteCourse(@item.CourseID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }



    </tbody>
</table>
<script>
    $('#dataTables-example').dataTable({
        dom: 'Bfrtip', buttons: [
            {
                extend: 'excelHtml5',
                exportOptions: {
                    columns: [0, 2, 3, 4]
                }
            },
            {
                extend: 'pdfHtml5',
                exportOptions: {
                    columns: [0, 2, 3, 4]
                }
            },{
                extend: 'print',
                exportOptions: {
                    columns: [0, 2, 3, 4]
                }
            }]
    });</script>