@model IEnumerable<Lincoln.Admin.Web.Models.CourseViewModel>
@{

    int sl = 1;
}
<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>Sl NO</th>
            <th>Check</th>
            <th>Faculty</th>
            <th>Programme</th>
            <th>Year</th>
            <th>SEM</th>
            <th>Course</th>
            <th>Code</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.CourseID">
                        </center>
                    </td>
                    <td>@item.DepartmentName</td>
                    <td>@item.ProgrammeName</td>
                    <td>@item.ProgrammeYear</td>
                    <td>@item.ProgrammeSemester</td>
                    <td>@item.CourseName</td>
                    <td>@item.CourseCode</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="javascript:void(0);" onclick="fnViewCourse(@item.CourseID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddCourse(@item.CourseID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteCourse(@item.CourseID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }



    </tbody>
</table>
<script>
    $('#dataTables-example').dataTable({
        dom: 'Bfrtip', buttons: [
            {
                extend: 'excelHtml5',
                exportOptions: {
                    columns: [0, 2, 3, 4, 5, 6, 7,8]
                }
            },
            {
                extend: 'pdfHtml5',
                exportOptions: {
                    columns: [0, 2, 3, 4, 5, 6, 7,8]
                }
            }, {
                extend: 'print',
                exportOptions: {
                    columns: [0, 2, 3, 4, 5, 6, 7,8]
                }
            }]
    });</script>