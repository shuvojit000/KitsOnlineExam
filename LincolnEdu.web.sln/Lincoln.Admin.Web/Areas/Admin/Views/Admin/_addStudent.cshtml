@model Lincoln.Admin.Web.Models.StudentViewModel
<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label>Student Code: </label>
                        <div class="position-relative has-icon-left">
                            <input type="text" placeholder="Student Code" value="@Model.StudentID" class="form-control" readonly="readonly">
                            <div class="form-control-position">
                                <i class="ft-user"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Select Batch: </label>
                        @Html.DropDownListFor(a=>a.BatchID,Model.BatchList,"Select Batch",new { @class="custom-select block" })

                        
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label>Student Name: </label>
                        <div class="position-relative has-icon-left gt">
                            @Html.TextBoxFor(a => a.StudentName,new { @class = "form-control" })
                            <div class="form-control-position">
                                <i class="ft-user"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label>Roll No: </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.RollNo, new { @placeholder = "Roll NO", @class = "form-control" })
                            <div class="form-control-position">
                                <i class="icon-size-actual"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Mobile No: </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.MobileNo, new { @placeholder = "Mobile No", @class = "form-control" })
                            <div class="form-control-position">
                                <i class="fa fa-mobile"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label>Email Id: </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.EmailID, new { @placeholder = "Email Id", @class = "form-control" })
                            <div class="form-control-position">
                                <i class="ft-mail"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Password: </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.Password, new { @placeholder = "Password", @class = "form-control" })
                            <div class="form-control-position">
                                <i class="ft-lock"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveStudent(@Model.StudentID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>
