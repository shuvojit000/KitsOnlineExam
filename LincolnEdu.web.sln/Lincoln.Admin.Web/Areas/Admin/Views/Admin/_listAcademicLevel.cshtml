@model IEnumerable<Lincoln.Admin.Web.Models.AcademicViewModel>
@{

    int sl = 1;
}
<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>Sl No</th>
            <th>Check</th>
            <th>NEC Level</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.AcademicID">
                        </center>
                    </td>
                    @*<td>@item.AcademicCode</td>*@
                    <td>@item.AcademicName</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="javascript:void(0);" onclick="fnViewAcademicLevel(@item.AcademicID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddAcademicLevel(@item.AcademicID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteAcademicLevel(@item.AcademicID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }



    </tbody>
</table>
