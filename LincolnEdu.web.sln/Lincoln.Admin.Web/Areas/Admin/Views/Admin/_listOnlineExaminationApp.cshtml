@model IEnumerable<Lincoln.Admin.Web.Models.AdminOnlineExaminationViewModel>
@{

    int sl = 1;
}
<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>Sl No</th>
            <th>Student Name</th>
            <th>Payment Status</th>
            <th><input type="checkbox" class="checkall" ></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>                                    
                    <td>@item.StudentName</td>
                    <td>@item.PaymentStatus</td>
                    <td>
                        <center>
                            <input type="checkbox" class="students" data-id="@item.StudentID">
                        </center>
                    </td>    
                   
                </tr>
                sl++;
            }
        }

    </tbody>
</table>
<script>
    $('#dataTables-example').dataTable({
        'columnDefs': [{
            'targets': [3], // column index (start from 0)
            'orderable': false, // set orderable false for selected columns
        }]
    });
    
</script>

