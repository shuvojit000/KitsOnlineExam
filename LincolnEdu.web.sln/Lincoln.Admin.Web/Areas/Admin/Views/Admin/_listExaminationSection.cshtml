


@model IEnumerable<Lincoln.Admin.Web.Models.ExaminationSectionViewModel>
@{

    int sl = 1;
}

<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>SlNo</th>
            <th>Check</th>
            <th>SEM</th>
            <th>Faculty</th>
            <th>Program </th>
            <th>Syllabus Version</th>
            <th>Course</th>

            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.ExaminationSectionID">
                        </center>
                    </td>
                    <td>@item.SemisterName</td>
                    <td>@item.FacultyName</td>
                    <td>@item.ProgramName</td>
                    <td>@item.SyllabusVersionName</td>
                    <td>@item.CourseName</td>

                    <td>@item.Active</td>

                    <td>
                        <a href="javascript:void(0);" onclick="fnViewExaminationSection(@item.ExaminationSectionID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddExaminationSection(@item.ExaminationSectionID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteExaminationSection(@item.ExaminationSectionID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                sl++;
            }
        }
    </tbody>
</table>

