@using Lincoln.Admin.Web.Models;

@*@model Lincoln.Admin.Web.Models.SubjectAssessmentViewModel*@
@model  Lincoln.Admin.Web.Models.SubjectAllocationViewModel
@{
    var p = 0;
    var q = 0;
}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .Grid {
        border: 1px solid #ccc;
        border-collapse: collapse;
        background-color: #fff;
    }

        .Grid th {
            background-color: #B8DBFD;
            color: #333;
            font-weight: bold;
        }

        .Grid th, .Grid td {
            padding: 5px;
            border: 1px solid #ccc;
        }

        .Grid img {
            cursor: pointer;
        }

    .ChildGrid {
        width: 100%;
    }

        .ChildGrid th {
            background-color: #6C6C6C;
            color: #fff;
            font-weight: bold;
        }
</style>

<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Faculty Name: </b></label>
                        @Html.DisplayFor(a => a.EmployeeName, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-lg-6">
                        <label><b>Programme: </b></label>
                        @Html.DisplayFor(a => a.ProgramName, new { @class = "form-control" })
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Programme Version:</b> </label>
                        @Html.DisplayFor(a => a.SyllabusVersionName, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Country:</b> </label>
                        @Html.DisplayFor(a => a.CountryName, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-lg-12">
                        <table cellpadding="0" cellspacing="0" class="table table-striped table-bordered base-style Grid" style="width:100%">
                            <tr>
                                <th></th>
                                <th>SL.NO</th>
                                <th>Semester</th>
                                <th>City</th>
                            </tr>
                            @foreach (var item in Model.SubAllocationList)
    {
        p = p + 1;
                                <tr>
                                    <td>
                                        @*<img src="~/Images/plus.png" />*@
                                        <img src="~/Content/assets/images/plus.png" />
                                        <div style="display:none">
                                            <table cellpadding="0" cellspacing="0" class="ChildGrid">
                                                <tr>
                                                    <th>SL.NO</th>
                                                    <th>Course</th>
                                                    <th>Allocate</th>
                                                </tr>
                                                @foreach (var item2 in Model.AllocationList?.SubAllocationDetailsList?.Where(a => a.ProgrammeSemesterID == item.SemisterID))
                        {
                            q = q + 1;
                            <tr>
                                <td>
                                    <label>@q </label>
                                </td>
                                <td>
                                    @Html.HiddenFor(a => item2.CourseID)
                                    <label id="CourseName" name="CourseName[]" value="@item2.CourseID">@item2.CourseName</label>
                                </td>
                                <td><input type="checkbox" id="OpenClose" name="OpenClose" value="OpenClose" @(item2.Allocation == 1 ? "checked" : "") /></td>
                            </tr>
                        }
                                            </table>
                                        </div>
                                    </td>
                                    <td>
                                        <label id="SL.NO">
                                            @p
                                        </label>

                                    </td>
                                    <td>
                                        @Html.HiddenFor(a => item.SemisterID)
                                        <label id="SemesterName" name="SemesterName[]" value="@item.SemisterID">@item.SemisterName</label>
                                    </td>
                                    <td>Kolkata</td>
                                </tr>
    }
                        </table>
                    </div>

                </div>
                <div class="row">
                    @*<div class="form-group col-lg-6">
                            <label><b>Programme Year:</b> </label>
                            @Html.DisplayFor(a => a.AcademicYearCode, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label><b>Semester:</b> </label>
                            @Html.DisplayFor(a => a.SemisterName, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label><b>Course: </b></label>
                            @Html.DisplayFor(a => a.CourseName, new { @class = "form-control" })
                        </div>*@
                </div>

                


            </div>
        </div>
        <!--PAGE CONTENT ENDS-->
    </div>
</div>
<!--main contant end-->
<script type="text/javascript">
    //Assign Click event to Plus Image.
    $("body").on("click", "img[src*='plus.png']", function () {
        $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
        $(this).attr("src", "/Content/assets/images/minus.png");
    });
    //Assign Click event to Minus Image.
    $("body").on("click", "img[src*='minus.png']", function () {
        $(this).attr("src", "/Content/assets/images/plus.png");
        $(this).closest("tr").next().remove();
    });

    /**/</script>