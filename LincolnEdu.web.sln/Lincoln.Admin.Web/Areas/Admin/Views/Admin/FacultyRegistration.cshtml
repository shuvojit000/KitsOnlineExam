
@{
    ViewBag.Title = "Faculty Registration";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="content-wrapper">
    <div class="content-header row">
    </div>
    <div class="content-body">
        <!-- Base style table -->
        <section id="base-style">
            <div class="row">
                <div class="col-12">
                    <div class="cardk">
                        <div class="card-header">
                            <h4 class="card-title">Employee Records</h4>
                            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix">
                            <div class="form-group pull-left" style="padding-left:22px; padding-top:10px;">
                                <select class="custom-select block" id="ddlLanguage">
                                    <option selected>Action</option>
                                    <option value="1">Active</option>
                                    <option value="2">Inactive</option>
                                </select>
                            </div>
                            
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body card-dashboard listFaculty">
                                @{Html.RenderAction("FacultyList", "Admin", new { area = "Admin" });}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--/ Base style table -->
    </div>
</div>
<div class="col-lg-12">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <label class="modal-title text-text-bold-600">Employee Entry & Modify</label>
                    </h4>
                    <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body recoPas">

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function fnChangeStatus(id, status) {
        if (confirm("Are you sure?")) {
            var model = {
                FacultyID: id,
                Active: status
            };

            $.ajax({
                url: '@Url.Action("SaveFaculty", "Admin",new {area="Admin" })',
                data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result > 0) {
                        alert('Status has been changed Successfully.');
                        fnLoadFacultyList();
                    }
                    else {
                        alert('Error in your requst.');
                        $("#myModal").modal('hide');

                    }
                },
                error: function (e) {
                    alert('Error in your requst.');
                }
            });
        }
    }
    function fnAddFaculty(id) {
        if (id != null && id != '') {
            $('.modal-body').load('/Admin/Admin/AddFaculty/' + id, function () { $("#myModal").modal('show'); });
        }
        else {
            $('.modal-body').load('/Admin/Admin/AddFaculty/', function () { $("#myModal").modal('show'); });
        }

    }
    function fnSaveFaculty(facultyId) {
        
        if ($('#EmployeeCode').val() == '') {
            alert('Employee Code is required.');
        }
        else if ($('#EmployeeName').val() == '') {
            alert('Employee Name is required.');
        }
        else if ($('#EmailID').val() == '') {
            alert('EmailID is required.');
        }
        else if ($('#MobileNo').val() == '') {
            alert('MobileNo is required.');
        }
        else if ($('#Password').val() == '') {
            alert('Password is required.');
        }
        else {

            var model = {
                FacultyID: facultyId,
                EmployeeCode:$('#EmployeeCode').val(),
                EmailID: $('#EmailID').val(),
                MobileNo: $('#MobileNo').val(),
                EmployeeName: $('#EmployeeName').val(),
                Password: $('#Password').val(),
                Active: 'A'
            };

            $.ajax({
                url: '@Url.Action("SaveFaculty", "Admin",new {area="Admin" })',
                data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result > 0) {
                        alert('Data Save Successfully.');
                        $("#myModal").modal('hide');
                        fnLoadFacultyList();
                    }
                    else {
                        alert('Error in your requst.');
                        $("#myModal").modal('hide');

                    }
                },
                error: function (e) {
                    alert('Error in your requst.');
                }
            });
        }
    }
    function fnViewFaculty(id) {
        $('.modal-body').load('/Admin/Admin/FacultyView/' + id, function () { $("#myModal").modal('show'); });
    }
    function fnLoadFacultyList() {
        $('.listFaculty').load('/Admin/Admin/FacultyList');
    }
    function fnDeleteFaculty(facultyId) {

        if (confirm("Are you sure?")) {
            var model = {
                FacultyID: facultyId
            };
            $.ajax({
                url: '@Url.Action("DeleteFaculty", "Admin",new {area="Admin" })',
                data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result > 0) {
                        alert('Faculty has been deleted Successfully.');
                        fnLoadFacultyList();
                    }
                },
                error: function (e) {
                    alert(e);
                }
            });
        }

    }
</script>