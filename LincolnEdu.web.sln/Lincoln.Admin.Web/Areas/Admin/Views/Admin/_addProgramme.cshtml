@model Lincoln.Admin.Web.Models.ProgrammeViewModel


<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Academic Level: </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.AcademicID, Model.AcademicList, "Select Academic Level", new { @class = "custom-select block" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Department :</b> </label>
                        @Html.DropDownListFor(a => a.DepartmentID, Model.DepartmentList, "Select Department", new { @class = "custom-select block" })


                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label><b>Programme Code:</b> </label>
                        <div class="position-relative has-icon-left gt">
                            @Html.TextBoxFor(a => a.ProgrammeCode, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Programme Name:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.ProgrammeName, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Approval NO:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.ApprovalNo, new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group col-lg-6">
                        <label><b>Credit:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.Credit, new { @class = "form-control" })

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveProgramme(@Model.ProgrammeID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>

<script>


     $(document).ready(function () {
        //Dropdownlist Selectedchange event
        $("#AcademicID").change(function () {
            $("#DepartmentID").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetDepartmentDrop","Admin",new { area="Admin"})', // we are calling json method

                dataType: 'json',

                data: { academicID: $("#AcademicID").val() },
                success: function (res) {
                    // states contains the JSON formatted list
                    // of states passed from the controller

                    $.each(res, function (i, state) {
                    $("#DepartmentID").append('<option value="' + state.Value + '">' +
                         state.Text + '</option>');
                    // here we are adding option for States

                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve Department.' + ex);
                }
            });
            return false;
        })
    });
</script>
