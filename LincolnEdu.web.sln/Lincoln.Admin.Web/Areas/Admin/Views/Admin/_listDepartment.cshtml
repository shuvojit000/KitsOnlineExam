
@model IEnumerable<Lincoln.Admin.Web.Models.DepartmentViewModel>
@{

    int sl = 1;
}

<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>SlNo</th>
            <th>Check</th>
            <th>Faculty Code</th>
            <th>Faculty Name</th>
            <th>HOD Name</th>
            <th>HOD Email</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {


            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.DepartmentID">
                        </center>
                    </td>
                    <td>@item.DepartmentCode</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.HODName</td>
                    <td>@item.HODEmail</td>

                    <td>@item.Status</td>
                    <td>
                        <a href="javascript:void(0);" onclick="fnViewDepartment(@item.DepartmentID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnAddDepartment(@item.DepartmentID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="javascript:void(0);" onclick="fnDeleteDepartment(@item.DepartmentID)" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
