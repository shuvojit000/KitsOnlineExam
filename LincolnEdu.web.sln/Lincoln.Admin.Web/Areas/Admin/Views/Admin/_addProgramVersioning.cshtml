
@model Lincoln.Admin.Web.Models.ProgramVersioningViewModel

<div class="panel-body">
    <!--main content start-->
    <div class="row">
        <div class="col-lg-12">
            <!--PAGE CONTENT BEGINS-->
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Academic Level: </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.ProgramCode, Model.ProgramList, "Select Academic Level", new { @class = "custom-select block" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Faculty: </b></label>
                        <div class="position-relative has-icon-left">
                            @Html.DropDownListFor(a => a.DepartmentCode, Model.DepartmentList, "Select Faculty", new { @class = "custom-select block" })

                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label><b>Version:</b> </label>
                        @Html.TextBoxFor(a => a.Version, new { @class = "form-control" ,@Placeholder= "Please write syllabus version" })


                    </div>
                </div>
                <div class="row">
                    
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label><b>Credit:</b> </label>
                        <div class="position-relative has-icon-left">
                            @Html.TextBoxFor(a => a.Credit, new { @class = "form-control" })

                        </div>
                    </div>                    
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="fnSaveProgramVersioning(@Model.ProgramVersioningID)" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Save
                </button>
            </div>
            <!--PAGE CONTENT ENDS-->
        </div>
    </div>
    <!--main contant end-->
</div>
