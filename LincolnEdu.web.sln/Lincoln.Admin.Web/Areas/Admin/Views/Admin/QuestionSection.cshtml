
@{
    ViewBag.Title = "Question Section";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}



<section id="base-style">
    <div class="row">
        <div class="col-12">
            <div class="cardk">
                <div class="card-header">
                    <h4 class="card-title">Question Type Records</h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="form-group pull-left" style="padding-left:22px; padding-top:10px;">
                        <select class="custom-select block" id="ddlLanguage">
                            <option selected>Action</option>
                            <option value="1">Active</option>
                            <option value="2">Inactive</option>
                        </select>
                    </div>
                    
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard  listQuestionSection">
                       @{ Html.RenderAction("QuestionSectionList", "Admin", new {area="Admin" });}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="col-lg-12">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <label class="modal-title text-text-bold-600">Question Section Entry & Modify</label>
                    </h4>
                    <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body recoPas">

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function fnChangeStatus(id, status) {
        if (confirm("Are you sure?")) {
            var model = {
                QuestionSectionID: id,
                Active: status
            };

            $.ajax({
                url: '@Url.Action("SaveQuestionSection", "Admin",new {area="Admin" })',
                data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result > 0) {
                        alert('Status has been changed Successfully.');
                        fnLoadQuestionSectionList();
                    }
                    else {
                        alert('Error in your requst.');
                        $("#myModal").modal('hide');

                    }
                },
                error: function (e) {
                    alert('Error in your requst.');
                }
            });
        }
    }
    function fnAddQuestionSection(id) {
        if (id!=null && id!='') {
            $('.modal-body').load('/Admin/Admin/AddQuestionSection/'+id, function () { $("#myModal").modal('show'); });
        }
        else {
            $('.modal-body').load('/Admin/Admin/AddQuestionSection/', function () { $("#myModal").modal('show'); });
        }

    }
    function fnSaveQuestionSection(questionSectionId) {

        if ($('#QuestionSectionName').val() == '') {
            alert('QuestionSection Name is required.');
        }
        else if ($('#QuestionSectionDesc').val()=='') {
             alert('QuestionSection Desc is required.');
        }
        else {


            var model = {
                QuestionSectionID: questionSectionId,
                QuestionSectionName: $('#QuestionSectionName').val(),
                QuestionSectionDesc: $('#QuestionSectionDesc').val(),
                Active: 'A'
            };

            $.ajax({
                url: '@Url.Action("SaveQuestionSection", "Admin",new {area="Admin" })',
                data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result > 0) {
                        alert('Data Save Successfully.');
                        $("#myModal").modal('hide');
                        fnLoadQuestionSectionList();
                    }
                    else {
                        alert('Error in your requst.');
                        $("#myModal").modal('hide');

                    }
                },
                error: function (e) {
                    alert('Error in your requst.');
                }
            });
        }
    }
    function fnViewQuestionSection(id) {
        $('.modal-body').load('/Admin/Admin/QuestionSectionView/'+id, function () { $("#myModal").modal('show'); });
    }
    function fnLoadQuestionSectionList() {
        $('.listQuestionSection').load('/Admin/Admin/QuestionSectionList');
    }
     function fnDeleteQuestionSection(questionSectionId) {

         if (confirm("Are you sure?")) {
              var model = {
                  QuestionSectionID: questionSectionId
         };
             $.ajax({
            url: '@Url.Action("DeleteQuestionSection", "Admin",new {area="Admin" })',
            data: JSON.stringify(model),
                type: 'POST',
                cache: false,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result>0) {
                        alert('QuestionSection has been deleted Successfully.');

                        fnLoadQuestionSectionList();
                    }
                },
                error: function (e) {
                    alert(e);
                }
            });
         }

    }
</script>