


@model IEnumerable<Lincoln.Admin.Web.Models.SubjectAllocationViewModel>
@{

    int sl = 1;
}

<table class="table table-striped table-bordered base-style" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>SlNo</th>
            <th>Check</th>
            <th>Employee</th>
            <th>Programme</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <center>
                            <input type="checkbox" class="statusCheck" data-id="@item.SubjectAllocationID">
                        </center>
                    </td>
                    <td>@item.FacultyName</td>
                    <td>@item.ProgramName</td>
                    <td>@item.Status</td>
                <td>
                    <a href="javascript:void(0);" onclick="fnViewSubjectAllocation(@item.SubjectAllocationID)" title="View"><i class="fa fa-eye"></i></a> &nbsp;
                    <a href="javascript:void(0);" onclick="fnAddSubjectAllocation(@item.SubjectAllocationID)" title="Edit"><i class="fa fa-edit"></i></a> &nbsp;
                    <a href="javascript:void(0);" onclick="fnDeleteSubjectAllocation(@item.SubjectAllocationID)" title="Delete"><i class="fa fa-trash"></i></a>
                    @*<a href="javascript:void(0);"  title="Inactive"><i class="fa fa-ban"></i></a>*@
                </td>
                </tr>
                sl++;
            }
        }
    </tbody>
</table>


<script>
    $('#dataTables-example').dataTable();

</script>